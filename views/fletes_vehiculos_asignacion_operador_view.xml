        <field name="model">fletes.vehiculos.asignacion.operador</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="fecha_asignacion" />
                            <field name="kilometraje_inicial" />
                            <field name="operador_id" />
