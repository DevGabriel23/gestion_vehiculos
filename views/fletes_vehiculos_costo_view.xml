<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="fletes_vehiculos_costo_view_form" model="ir.ui.view">
        <field name="name">fletes.vehiculos.costo.view.form</field>
        <field name="model">fletes.vehiculos.costo</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group >
                            <field name="fecha" />
                            <field name="descripcion" />
                        </group>
                        <group >
                            <field name="monto" />
                            <field name="costo_id" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="fletes_vehiculos_costo_view_tree" model="ir.ui.view">
        <field name="name">fletes.vehiculos.costo.view.tree</field>
        <field name="model">fletes.vehiculos.costo</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="fecha" />
                <field name="descripcion" />
                <field name="monto" />
                <field name="costo_id" widget="badge" />
            </tree>
        </field>
    </record>

</odoo>
